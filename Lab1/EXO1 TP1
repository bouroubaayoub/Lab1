#include <stdio.h>

int main() {
    int n, arr[50][50],temp;

    printf("gimme n between 1 & 50:\n");
    scanf("%d", &n);

    while (n < 1 || n > 50) {
        printf("ereur! Enter n between 1 & 50:\n");
        scanf("%d", &n);
    }

    printf("enter elements of the array row by row\n");
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            scanf("%d", &arr[i][j]);
        }
    }

    printf("The first array is:\n");
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            printf("%d ", arr[i][j]);
        }
        printf("\n");
    }
    for (int i = 0; i < n; i++) {
        for (int j = i; j < n; j++) {
           temp= arr[i][j];
           arr[i][j]=arr[j][i];
           arr[j][i]=temp;
        }
    }
     printf("The  array after transpose is:\n");
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            printf("%d ", arr[i][j]);
        }
        printf("\n");
    }
    

    return 0;
}







 
