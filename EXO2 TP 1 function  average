
#include <stdio.h>
int average(int arr[] ,int n){
   int avr= 0;
for(int i=0;i<n;i++){
avr +=arr[i];}
return avr/n;

}


int main(){
    int arr[50],n;
    printf("enter n and n<50 \n");
    scanf("%d\n",&n);
    while(n>50){
        printf("ereur !enter n and n<50 \n");
    scanf("%d\n",&n); 
    }
    printf("now ,enter the element of the array  \n");
    for(int i=0;i<n;i++){
    scanf("%d",&arr[i]);
    }
    printf("  the average of the array is %d",average(arr,n));
    return 0;
}

